<div class="page-header">
  <h3>Outcome #<%= @outcome.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Prereq question</dt>
      <dd>
        <% if @outcome.prereq_question.present? %>
          <a href="/questions/<%= @outcome.prereq_question_id %>">
            <%= @outcome.prereq_question.inquiry %>
          </a>
        <% end %>
      </dd>

      <dt>Answer</dt>
      <dd>
        <% if @outcome.answer.present? %>
          <a href="/answers/<%= @outcome.answer_id %>">
            <%= @outcome.answer.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Resulting question</dt>
      <dd>
        <% if @outcome.resulting_question.present? %>
          <a href="/questions/<%= @outcome.resulting_question_id %>">
            <%= @outcome.resulting_question.inquiry %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/outcomes" class="btn btn-primary">
        Back
      </a>
      <a href="/outcomes/<%= @outcome.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_outcome/<%= @outcome.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
