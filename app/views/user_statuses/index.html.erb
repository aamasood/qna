<div class="page-header">
  <h1>
    User statuses
    <a href="/user_statuses/new" class="btn btn-lg btn-success">New User status</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Subject</th>
        <th>Last question</th>
        <th>User</th>
        <th>Last answer</th>
        <th>Actions</th>
      </tr>

      <% @user_statuses.each do |user_status| %>
      <tr>
        <td><%= user_status.subject.created_at %></td>
        <td><%= user_status.last_question_id %></td>
        <td><%= user_status.user.email %></td>
        <td><%= user_status.last_answer.created_at %></td>
        <td>
          <a href="/user_statuses/<%= user_status.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == user_status.user %>
            <a href="/user_statuses/<%= user_status.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_user_status/<%= user_status.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @user_statuses, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
