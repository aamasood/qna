<div class="page-header">
  <h3>User Status #<%= @user_status.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Subject</dt>
      <dd>
        <% if @user_status.subject.present? %>
          <a href="/subjects/<%= @user_status.subject_id %>">
            <%= @user_status.subject.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Last question</dt>
      <dd><%= @user_status.last_question_id %></dd>

      <dt>User</dt>
      <dd>
        <% if @user_status.user.present? %>
          <a href="/users/<%= @user_status.user_id %>">
            <%= @user_status.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Last answer</dt>
      <dd>
        <% if @user_status.last_answer.present? %>
          <a href="/answers/<%= @user_status.last_answer_id %>">
            <%= @user_status.last_answer.created_at %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/user_statuses" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @user_status.user %>
        <a href="/user_statuses/<%= @user_status.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_user_status/<%= @user_status.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
