<div class="page-header">
  <h1>
    User responses
    <a href="/user_responses/new" class="btn btn-lg btn-success">New User response</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Question</th>
        <th>Answer</th>
        <th>Actions</th>
      </tr>

      <% @user_responses.each do |user_response| %>
      <tr>
        <td><%= user_response.user.email %></td>
        <td><%= user_response.question_id %></td>
        <td><%= user_response.answer_id %></td>
        <td>
          <a href="/user_responses/<%= user_response.id %>" class="btn btn-primary">Show</a>
          <a href="/user_responses/<%= user_response.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_user_response/<%= user_response.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
