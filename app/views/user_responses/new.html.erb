<!-- Validation failure messages -->
<% if @user_response.errors.any? %>
  <% @user_response.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add User Response</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_user_response" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @user_response.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for question_id -->
      <div class="form-group">
        <label for="question_id" class="control-label">
          Question
        </label>

        <input type="text" id="question_id" name="question_id" placeholder="Question" class="form-control" value="<%= @user_response.question_id %>">
      </div>

      <!-- Label and input for answer_id -->
      <div class="form-group">
        <label for="answer_id" class="control-label">
          Answer
        </label>

        <input type="text" id="answer_id" name="answer_id" placeholder="Answer" class="form-control" value="<%= @user_response.answer_id %>">
      </div>

      <button class="btn btn-success">
        Create User Response
      </button>
      or
      <a href="/user_responses">Cancel</a>
    </form>
  </div>
</div>
