<div class="page-header">
  <h1>
    Questions
    <a href="/questions/new" class="btn btn-lg btn-success">New Question</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "questions_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :inquiry_cont, "Inquiry contains" %>
    <%= f.text_field :inquiry_cont, :class => "form-control", :placeholder => "Inquiry contains" %>
  </div>

<div class="form-group">
    <%= f.label :high_level_question_eq, "High level question" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :high_level_question_eq, "1", checked: ((params[:q] && params[:q][:high_level_question_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :high_level_question_eq, "0", checked: ((params[:q] && params[:q][:high_level_question_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :high_level_question_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Answer Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='answersgteqcreated_atPicker'>
                  <%= f.text_field :answers_created_at_gteq, :class => "form-control", :placeholder => "Answer Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='answerslteqcreated_atPicker'>
                  <%= f.text_field :answers_created_at_lteq, :class => "form-control", :placeholder => "Answer Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#answersgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#answerslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#answersgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#answerslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#answerslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#answersgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Subject Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='subjectgteqcreated_atPicker'>
                  <%= f.text_field :subject_created_at_gteq, :class => "form-control", :placeholder => "Subject Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='subjectlteqcreated_atPicker'>
                  <%= f.text_field :subject_created_at_lteq, :class => "form-control", :placeholder => "Subject Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#subjectgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#subjectlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#subjectgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#subjectlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#subjectlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#subjectgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/questions" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#questions_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Inquiry</th>
        <th>Subject</th>
        <th>High level question</th>
        <th>Actions</th>
      </tr>

      <% @questions.each do |question| %>
      <tr>
        <td><%= question.inquiry %></td>
        <td>
          <% if question.subject.present? %>
            <a href="/subjects/<%= question.subject.id %>">
              <%= question.subject.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= question.high_level_question %></td>
        <td>
          <a href="/questions/<%= question.id %>" class="btn btn-primary">Show</a>
          <a href="/questions/<%= question.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_question/<%= question.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @questions, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
